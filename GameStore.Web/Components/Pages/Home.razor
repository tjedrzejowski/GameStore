@page "/"
@using Models

<PageTitle>Game Cataloge</PageTitle>

<table>
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Release Date</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var game in games)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Genre</td>
                <td>@game.Price</td>
                <td>@DateOnly.FromDateTime(game.ReleaseDate)</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@code {
    private GameSummary[] games = [
    new(){Id = 1, Name = "Streat Fighter II", Genre = "Fighting", Price = 19.99M, ReleaseDate = new DateTime(1992, 7, 15)}
    ];
}